<div class="bordered_wrapper">
  <h3>
    Users
  </h3>
  
  <div class="row">
    <div class="span11">

      <table class="table table-condensed">

        <tr>
          <th>Email</th>
          <th>Fname</th>
          <th>Lname</th>
          <th>Phone number</th>
          <th>Admin</th>
          <th></th>
          <th></th>
        </tr>

        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.fname %></td>
            <td><%= user.lname %></td>
            <td><%= user.phone_number %></td>
            <td><%= user.admin ? 'Yes' : '' %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>

      </table>
    </div>

  </div>
</div>